<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Detail Product</title>
</head>
<body>
    <h1><%= product.name %></h1>
    <ul>
        <li>
            <strong>Brand:</strong>
            <%= product.brand %>
        </li>
        <li>
            <strong>Color:</strong>
            <%= product.color %>
        </li>
        <li>
            <strong>Size:</strong>
            <%= product.size %>
        </li>
        <li>
            <strong>Price:</strong>
            <%= product.price %>
        </li>
    </ul>
    <a href="/products">Back</a>
</body>
</html>